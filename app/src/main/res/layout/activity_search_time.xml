<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5691DC"
    tools:context=".Include_Medicines">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="           Dr Smart "

        android:textSize="25pt" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/pills"

        />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="413dp"
        android:gravity="center"
        android:text="Consultar horários"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Remédio:"
        android:inputType="date"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="322dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Este medicamento deve ser ingerido as:"
        android:gravity="center"
        android:textSize="18pt"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="367dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="time"
        android:text="20:30"
        android:textSize="18pt"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="499dp" />


    <EditText
        android:id="@+id/editText9"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="608dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Este é o dia "
        android:textSize="12pt"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="608dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="do tratamento."
        android:textSize="12pt"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="608dp" />


    <Button
        android:id="@+id/btSign"
        android:layout_width="201dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:background="#EA8B79"
        android:text="Confirmar"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="667dp" />

</android.support.constraint.ConstraintLayout>